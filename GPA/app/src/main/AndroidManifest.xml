<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uima.joanne.gpa"
    android:versionCode="2"
    android:versionName="2.0">

    <application
        android:icon="@drawable/gpa"
        android:label="@string/app_name"
        >
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".CourseList"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uima.joanne.gpa.CourseList" />
        </activity>
        <activity
            android:name=".CourseList"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CourseView"
            android:label="@string/course_title"/>
        <activity
            android:name=".QuickCalc"
            android:label="@string/quickCalc"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>